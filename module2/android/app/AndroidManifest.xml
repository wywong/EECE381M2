<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ctrl_f_it"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="12" android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ctrl_f_it.MainActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".camActivity"
          android:label="@string/app_name"
		  android:parentActivityName="com.example.ctrl_f_it.MainActivity"
          android:screenOrientation="landscape">
          <!-- configure this activity to use landscape orientation -->

          <!-- Parent activity meta-data to support 4.0 and lower -->
          <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.example.ctrl_f_it.MainActivity" />

		</activity>
        <activity
            android:name="com.example.ctrl_f_it.ProcessingActivity"
            android:label="@string/title_activity_processing"
            android:parentActivityName="com.example.ctrl_f_it.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ctrl_f_it.MainActivity" />
        </activity>
    </application>
</manifest>
